<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWindowBackground">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <TextView
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="下面演示使用策略模式动态调用图片加载框架，具体使用请看Demo代码"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_rect_bg_white_radius_10dp"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:orientation="vertical">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="普通加载图片"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

            <ImageView
                    android:id="@+id/iv_common"
                    android:layout_margin="10dp"
                    android:layout_gravity="center"
                    android:layout_width="100dp"
                    android:layout_height="100dp" />

            <LinearLayout
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <Button
                        android:id="@+id/btn_net"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAllCaps="false"
                        android:layout_weight="1"
                        android:text="网络图片"
                        android:textSize="12sp" />

                <Button
                        android:id="@+id/btn_res"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAllCaps="false"
                        android:layout_weight="1"
                        android:text="res资源图片"
                        android:textSize="12sp" />

                <Button
                        android:id="@+id/btn_assets"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAllCaps="false"
                        android:layout_weight="1"
                        android:text="assets资源图片"
                        android:textSize="12sp" />

                <Button
                        android:id="@+id/btn_local"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAllCaps="false"
                        android:layout_weight="1"
                        android:text="本地图片"
                        android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shape_rect_bg_white_radius_10dp"
                android:padding="10dp"
                android:layout_margin="10dp"
                android:orientation="vertical">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="指定条件加载图片"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

            <ImageView
                    android:id="@+id/iv_option"
                    android:layout_margin="10dp"
                    android:layout_gravity="center"
                    android:layout_width="100dp"
                    android:layout_height="100dp" />

            <LinearLayout
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <Button
                        android:id="@+id/btn_circle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="圆形"
                        android:textSize="12sp" />

                <Button
                        android:id="@+id/btn_round"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="圆角"
                        android:textSize="12sp" />

                <Button
                        android:id="@+id/btn_blur"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="模糊"
                        android:textSize="12sp" />

                <Button
                        android:id="@+id/btn_gray"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="黑白"
                        android:textSize="12sp" />

                <Button
                        android:id="@+id/btn_circle_border"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="圆形边框"
                        android:textSize="12sp" />
            </LinearLayout>

            <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="可同时应用多个条件效果。\n更多设置请查看LoadOption类或使用文档"/>
        </LinearLayout>



        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_rect_bg_white_radius_10dp"
                android:padding="10dp"
                android:layout_margin="10dp"
                android:orientation="vertical">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="获取网络图片的Bitmap并展示"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

            <ImageView
                    android:id="@+id/iv_bitmap"
                    android:layout_margin="10dp"
                    android:layout_gravity="center"
                    android:layout_width="100dp"
                    android:layout_height="100dp"/>

            <Button
                    android:id="@+id/btn_bitmap"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="请求"
                    android:textSize="12sp" />
        </LinearLayout>


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shape_rect_bg_white_radius_10dp"
                android:padding="10dp"
                android:layout_margin="10dp"
                android:orientation="vertical">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="下载图片到本地文件并展示"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

            <ImageView
                    android:id="@+id/iv_download"
                   android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:layout_width="100dp"
                    android:layout_height="100dp"/>

            <Button
                    android:id="@+id/btn_download"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="请求"
                    android:textSize="12sp" />
        </LinearLayout>



        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shape_rect_bg_white_radius_10dp"
                android:padding="10dp"
                android:layout_margin="10dp"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/tv_cacheSize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="缓存大小：00MB"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

            <LinearLayout
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <Button
                        android:id="@+id/btn_memory_cache"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="清除内存缓存"
                        android:textSize="12sp" />

                <Button
                        android:id="@+id/btn_disk_cache"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="清除磁盘缓存"
                        android:textSize="12sp" />
                <Button
                        android:id="@+id/btn_universalLoader"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAllCaps="false"
                        android:layout_weight="1"
                        android:text="使用universalLoader"
                        android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>