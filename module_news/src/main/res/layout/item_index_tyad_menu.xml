<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    android:background="@color/color_white"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <kv.vension.vframe.views.ShapeImageView
                    android:id="@+id/tymenu_a"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/qb_px_200"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    tools:src="@drawable/place_image_default"
                    app:siv_shape_type="SHAPE_ROUND"/>
            <kv.vension.vframe.views.ShapeImageView
                    android:id="@+id/tymenu_b"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/qb_px_200"
                    android:layout_weight="1"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_gravity="center_vertical"
                    android:adjustViewBounds="true"
                    tools:src="@drawable/place_image_default"
                    app:siv_shape_type="SHAPE_ROUND"/>
            <kv.vension.vframe.views.ShapeImageView
                    android:id="@+id/tymenu_c"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/qb_px_200"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:adjustViewBounds="true"
                    tools:src="@drawable/place_image_default"
                    app:siv_shape_type="SHAPE_ROUND"/>
        </LinearLayout>

    </FrameLayout>

</RelativeLayout>