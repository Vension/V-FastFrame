<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:roundiv="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llSingleRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/article_list_item_bg_selector"
    android:gravity="center_vertical"
    android:paddingTop="15dip"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llContent"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/Margin1"
        android:paddingRight="@dimen/Margin1"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/article_left"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:paddingBottom="6dp">
            <TextView
                android:id="@+id/Tarticle_title"
                android:textColor="#ff36373d"
                android:textSize="14sp"
                android:textStyle="bold"
                android:ellipsize="end"
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:includeFontPadding="false"
                android:maxLines="3" />

        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="14dp">

            <kv.vension.fastframe.views.ShapeImageView
                    android:id="@+id/article_img1"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="96dp"
                    android:layout_gravity="center_vertical"
                    android:adjustViewBounds="true"
                    app:siv_shape_type="SHAPE_ROUND"
                    app:siv_left_top_radiusX="10dp"
                    app:siv_left_top_radiusY="10dp"
                    app:siv_left_bottom_radiusX="10dp"
                    app:siv_left_bottom_radiusY="10dp"
                    tools:src="@drawable/img_banner2"/>
            <kv.vension.fastframe.views.ShapeImageView
                    android:id="@+id/article_img2"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="96dp"
                    android:layout_gravity="center_vertical"
                    android:adjustViewBounds="true"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    app:siv_shape_type="SHAPE_ROUND"
                    tools:src="@drawable/img_banner2"/>
            <kv.vension.fastframe.views.ShapeImageView
                    android:id="@+id/article_img3"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="96dp"
                    android:layout_gravity="center_vertical"
                    android:adjustViewBounds="true"
                    app:siv_shape_type="SHAPE_ROUND"
                    app:siv_right_top_radiusX="10dp"
                    app:siv_right_top_radiusY="10dp"
                    app:siv_right_bottom_radiusX="10dp"
                    app:siv_right_bottom_radiusY="10dp"
                    tools:src="@drawable/img_banner2"/>

        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/Margin1"
        android:paddingRight="@dimen/Margin1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <!--专题-->
            <LinearLayout
                android:id="@+id/llZhuanTi"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginRight="10dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/icon_4"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:textColor="#ff36373d"
                    android:textSize="10sp"
                    android:text="专题"/>
            </LinearLayout>
            <TextView
                android:id="@+id/hotFlag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#e84e40"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:layout_marginRight="10dp"
                android:textSize="8sp"
                android:textStyle="bold"
                android:background="@drawable/bg_verificationcode_btn_red_border"
                android:visibility="gone"
                android:text="热点"/>
            <TextView
                android:id="@+id/tvTSourceName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#ff939699"
                android:textSize="9sp"
                android:visibility="visible"
                android:text="微信公众账号"/>
            <ImageView
                android:layout_width="13dp"
                android:layout_height="12dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:scaleType="fitXY"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_homepage_comment_normal"/>
            <TextView
                android:id="@+id/tvTcommetnum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="#ff939699"
                android:textSize="9sp"
                android:visibility="visible"
                android:text="32"/>
            <TextView
                android:id="@+id/tvDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="#ff939699"
                android:layout_marginLeft="10dp"
                android:textSize="9sp"
                android:visibility="visible"
                android:text="刚刚"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/article_dislike"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="3dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_homepage_dislike_normal" />
    </RelativeLayout>
    <TextView
        android:id="@+id/btm_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="#fff2f3f5"/>

</LinearLayout>