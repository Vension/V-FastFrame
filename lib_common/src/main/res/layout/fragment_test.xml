<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="@color/colorWindowBackground"
        android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_10"
            android:textAllCaps="false"
            android:text="test fragment"
            android:gravity="center"/>

    <kv.vension.fastframe.views.QMUIRadiusImageView
            android:clickable="true"
            android:id="@+id/radiusImageView"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:src="@drawable/banner_1"
            android:layout_marginTop="10dp"
            app:qmui_border_color="@color/colorAppTheme"
            app:qmui_border_width="2dp"
            app:qmui_corner_radius="15dp"
            app:qmui_selected_border_color="@color/color_orange"
            app:qmui_selected_border_width="10dp"
            app:qmui_selected_mask_color="@color/color_red"/>

</androidx.appcompat.widget.LinearLayoutCompat>
